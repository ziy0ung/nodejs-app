extends layout

block content
  
  div(class="wrapper")
    form(action='/board/'+board.id+'/edit' method='post')
      table(class='edit')
        colgroup
          col(width="15%")
          col(width="85%")
        tr
          th 제 목
          td: input(type='text' name='title' size=30 value=board.title placeholder='board.title')
        tr
          th 글쓴이
          td(style="padding-left: 10px;")= board.author_id
        tr
          th 작성일
          td(style="padding-left: 10px;")= board.created
        tr
          td(colspan=2 style="height: 250px; vertical-align: top;"): textarea(name='description' rows=15 cols=85)
            = board.description
      input(class='btn' type='submit' value='완 료')



